@using PortfolioUnleashed.Models.ViewModels;
@using PortfolioUnleashed.Enums;
@model VMEducation

<div class="col-xs-6 col-md-4 col-lg-3">
    <ul>
        <li>
            @Html.LabelFor(m => m.School)
            @Html.DisplayFor(m => m.School)
        </li>
        <li>
            @Html.LabelFor(m => m.Degree)
            @Html.DisplayFor(m => m.Degree)
        </li>
        <li>
            <span>@Model.StartYear - @Model.EndYear</span>
            @if (Model.EndYear > DateTime.Now.Year)
            {
                @:<i>(Expected)</i>
	        }
        </li>
    </ul>
</div>
