@using PortfolioUnleashed.Models.ViewModels;
@using PortfolioUnleashed.Enums;
@model VMContribution

@{
	string title = Model.Title;
	string description = Model.Description;
}
<fieldset class="projectCreatingSection">
	<legend>Your Contribution <span class="glyphicon glyphicon-upload"/></legend>
	<div id="collaboratorContainer">
		<div class="form-group">
			@Html.LabelFor(m => m.Title)
			@Html.TextBox("PersonalContribution.Title", title, new { @class="form-control", placeholder="Title" })
			@Html.ValidationMessageFor(m => m.Title)
		</div>
		<div class="form-group">
			@Html.LabelFor(m => m.Description)
			@Html.TextArea("PersonalContribution.Description", description, new { @class="form-control", placeholder="Description" })
			@Html.ValidationMessageFor(m => m.Description)
		</div>
	</div>
	@if (Model.Media != null && Model.Media.Count > 0)
	{
		@Html.Partial("~/Views/Project/Partial/FormEntry/_ContributionMediaFormPartial.cshtml", Model.Media)		
	}
	else
	{
		@Html.Partial("~/Views/Project/Partial/FormEntry/_ContributionMediaFormPartial.cshtml", new List<VMContributionMedium>())			 
	}
</fieldset>
